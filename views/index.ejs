<%- include("partials/header.ejs") %>

<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="text-center display-4 fs-1 fw-bold lh-1 mb-3">🐦✨  Your TwiT</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% posts.forEach(function(post) { %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <!-- <a href="/posts/<%= post.id %>" class="btn btn-danger">Delete</a> -->
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
</div>

  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start" style="margin-top: 0;">
        <h2 class="display-4 fs-1 fw-bold lh-1 mb-3">🐦✨ New TwiT</h2>
        <p class="col-lg-10 fs-5">🐦✨ Welcome to TwitLitLounge – Where Every Tweet Tells a Tale! 📚 Dive into a world of concise creativity, where words weave wonders in 280 characters or less. Join our lounge, explore the magic of micro-stories, and let the tweets unfold like chapters in a captivating book! 🌟 #TwitLitLounge #MicroFictionMagic</p>
        </div>
      <div class="container col-md-10 mx-auto col-lg-5">
        <form action="/posts" method="post" class="p-4 p-md-5 border rounded-3 bg-light">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content"  name="content" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
      </div>
    </div>
  </div>


<%- include("partials/footer.ejs") %>
